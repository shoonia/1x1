<%
  var title = '1x1 Pixel PNG';
  var description = 'One pixel transparent PNG. Online generator for creating 1x1 pixel transparent PNG image in Base64 encoded, Bytes, or Download. 1 pixel for white, black, transparent image.';
  var image = new URL('favicon.png', homepage).href;
  var gitHubStars = 'https://badgen.net/github/stars/shoonia/1x1?icon=github';

  var ldJson = JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    'url': homepage,
    'potentialAction': {
      '@type': 'SearchAction',
      'target': `${homepage}#{color}`,
      'query-input': {
        '@type': 'PropertyValueSpecification',
        'valueRequired': true,
        'valueMaxlength': 20,
        'valueName': 'color'
      }
    }
  });
%>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="preload" as="image" href="<%= gitHubStars %>">
  <title><%= title %></title>
  <% if (isProd) { %>
    <base href="<%= homepage %>">
  <% } %>
  <link rel="canonical" href="<%= homepage %>">
  <link rel="sitemap" href="sitemap.xml" type="application/xml" title="<%= title %>">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  <meta name="google-site-verification" content="JkNxAfkbyATcDv733CZNZPVT9UPc4rJNXxd31OgDwvY">
  <meta name="theme-color" content="#ffffff">
  <meta name="description" content="<%= description %>">
  <meta property="og:title" content="<%= title %>">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= homepage %>">
  <meta property="og:image" content="<%= image %>">
  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@_shoonia">
  <meta name="twitter:creator" content="@_shoonia">
  <meta name="twitter:title" content="<%= title %>">
  <meta name="twitter:description" content="<%= description %>">
  <meta itemprop="name" content="<%= title %>">
  <meta itemprop="description" content="<%= description %>">
  <meta itemprop="image" content="<%= image %>">
  <script type="application/ld+json"><%= ldJson %></script>
</head>

<body class="wrapper">

  <button type="button" id="random" class="btn_random" aria-label="Random Color">
    <svg height="40" width="40" viewBox="0 0 290 221" aria-hidden="true" fill="#2b5672">
      <path d="M239 128l-36 79c-1 3-4 5-8 6l-86 8c-4 0-7-2-9-5l-50-70c-2-3-3-7-1-10l36-79c1-3 4-5 8-6l86-8c4 0 7 2 9 5l50 70c2 3 3 7 1 10zm-88 5l44 61 31-70-43-61-32 70zm32 67l-42-59-74 6 42 60 74-7zM64 134l75-7 32-70-75 7-32 70zM54 43c7-15 20-23 35-25l2 6c-14 2-25 9-31 22l-6-3zM23 170c-9-13-11-28-6-43l7 2c-4 13-4 26 5 37l-6 4zM181 13c15 1 25 7 34 20l-6 4c-6-11-17-17-29-17l1-7zm89 92c7 15 6 30-2 44l-6-3c7-12 8-25 2-38l6-3zM46 31C53 16 65 8 81 6l1 6c-13 2-24 9-30 22l-6-3zM9 172c-10-13-11-28-6-43l6 2c-4 13-3 26 5 37l-5 4zM183 0c16 0 29 7 38 20l-5 4c-8-11-19-18-33-17V0zm102 106c7 15 5 30-2 44l-6-3c7-12 8-25 2-38l6-3z" />
      <circle transform="matrix(-.67 -.29 .04 -.97 188.24 152.27)" r="14" />
      <circle transform="matrix(-.65 -.28 .07 -.94 188.32 98.63)" r="14" />
      <circle transform="matrix(.69 .43 -.47 .38 132.73 156.33)" r="14" />
      <circle transform="matrix(.69 .43 -.47 .38 95.04 160.39)" r="14" />
      <circle transform="matrix(.69 .43 -.47 .38 153.61 186.19)" r="14" />
      <circle transform="matrix(.69 .43 -.47 .38 115.92 190.25)" r="14" />
      <circle transform="matrix(-.93 .28 -.11 .94 114.82 96.89)" r="14" />
    </svg>
  </button>

  <aside class="sitebar">
    <details open>
      <summary class="title">HEX</summary>
      <fieldset class="fields">
        <div class="field__pair">
          <label class="field__box">
            <span>Color:</span>
            <input type="text" list="colorList" autocomplete="on" id="inputColor" class="field" placeholder="ffffff" value="ffffff" spellcheck="false">
            <datalist id="colorList"></datalist>
          </label>
          <label class="field__box" aria-label="Alpha (Opacity)">
            <input type="text" id="inputAlpha" class="field" placeholder="ff" value="ff" maxlength="2">
          </label>
        </div>
        <button type="button" class="btn btn__create">
          Create
        </button>
      </fieldset>
    </details>
    <details id="rgbaDetails">
      <summary class="title">RGBA</summary>
      <fieldset class="fields">
        <label class="field__box">
          <span>Red:</span>
          <input type="range" data-rgba="R" id="rangeRed" class="range" value="255" max="255" min="0" step="1">
        </label>
        <label aria-label="red">
          <input type="number" data-rgba="R" id="numberRed" class="field field__number" placeholder="0" value="255" max="255" min="0" step="1">
        </label>
        <label class="field__box">
          <span>Green:</span>
          <input type="range" data-rgba="G" id="rangeGreen" class="range" value="255" max="255" min="0" step="1">
        </label>
        <label aria-label="Green">
          <input type="number" data-rgba="G" id="numberGreen" class="field field__number" placeholder="0" value="255" max="255" min="0" step="1">
        </label>
        <label class="field__box">
          <span>Blue:</span>
          <input type="range" data-rgba="B" id="rangeBlue" class="range" value="255" max="255" min="0" step="1">
        </label>
        <label aria-label="Blue">
          <input type="number" data-rgba="B" id="numberBlue" class="field field__number" placeholder="0" value="255" max="255" min="0" step="1">
        </label>
        <label class="field__box">
          <span>Alpha (Opacity):</span>
          <input type="range" data-rgba="A" id="rangeAlpha" class="range" value="255" max="255" min="0" step="1">
        </label>
        <label aria-label="Alpha (Opacity)">
          <input type="number" data-rgba="A" id="numberAlpha" class="field field__number" placeholder="0" value="255" max="255" min="0" step="1">
        </label>
      </fieldset>
    </details>
    <details>
      <summary class="title">Picker</summary>
      <fieldset class="fields">
        <label aria-label="color picker">
          <input type="color" id="picker" class="picker">
        </label>
      </fieldset>
    </details>
    <div class="history" id="history">
      <div>
        <div>Undo:</div>
        <button type="button" id="undo" class="btn__hint">
          <kbd data-hint="darwin" hidden>
            <span>⌘</span>
            <span>z</span>
          </kbd>
          <kbd data-hint="win" hidden>
            <span>Ctrl</span>
            <span>z</span>
          </kbd>
        </button>
      </div>
      <div>
        <div>Redo:</div>
        <button type="button" id="redo" class="btn__hint">
          <kbd data-hint="darwin" hidden>
            <span>⌘</span>
            <span>Shift</span>
            <span>z</span>
          </kbd>
          <kbd data-hint="win" hidden>
            <span>Ctrl</span>
            <span>Shift</span>
            <span>z</span>
          </kbd>
        </button>
      </div>
    </div>
  </aside>

  <div class="page">
    <main class="content">
      <h1 class="content__title">
        One pixel Base64 encoded transparent PNG generator
      </h1>
      <p style="position:absolute;top:0;width:1px;height:1px;padding:0;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0">
        <%= description %>
      </p>

      <div id="outputImage" class="output__image">

        <nav class="preset">
          <ul class="preset_list">
            <li class="preset_item">
              <a href="#ffffffff" class="preset_btn preset_btn--white" title="White"></a>
            </li>
            <li class="preset_item">
              <a href="#000000ff" class="preset_btn preset_btn--black" title="Black"></a>
            </li>
            <li class="preset_item">
              <a href="#00000000" class="preset_btn" title="Transparent"></a>
            </li>
          </ul>
        </nav>

        <span id="outputBadge" class="output_badge">1x1 (70 bytes)</span>
      </div>

      <fieldset class="fields" aria-label="output">
        <label class="field__box">
          <span class="field__label" title="Click to Copy">
            Data: URL
          </span>
          <input data-clipboard type="text" id="outputDataURL" class="field field__output" title="Click to Copy" readonly>
        </label>
        <label class="field__box">
          <span class="field__label" title="Click to Copy">
            CSS:
          </span>
          <input data-clipboard type="text" id="outputCSS" class="field field__output" title="Click to Copy" readonly>
        </label>
        <label class="field__box">
          <span class="field__label" title="Click to Copy">
            Base64:
          </span>
          <input data-clipboard type="text" id="outputBase64" class="field field__output" title="Click to Copy" readonly>
        </label>
        <label class="field__box">
          <span class="field__label" title="Click to Copy">
            Bytes:
          </span>
          <input data-clipboard type="text" id="outputBytes" class="field field__output" title="Click to Copy" readonly>
        </label>
        <label class="field__box">
          <span class="field__label" title="Click to Copy">
            Share Link:
          </span>
          <input data-clipboard type="url" id="outputLink" class="field field__output" title="Click to Copy" readonly>
        </label>
        <div class="field__box">
          <a id="download" class="btn btn__output">
            &nbsp;Download PNG
          </a>
        </div>
      </fieldset>
    </main>

    <footer class="footer">
      <div class="content content__footer" role="list">
        <span role="listitem">
          <a href="https://twitter.com/_shoonia" class="link footer__link" aria-label="follow me on twitter" rel="me">
            Twitter
          </a>
        </span>
        <span role="listitem">
          <a href="https://www.linkedin.com/in/shoonia" class="link footer__link" aria-label="follow me on linkedin" rel="me">
            LinkedIn
          </a>
        </span>
        <span role="listitem">
          <a href="https://shoonia.site" class="link footer__link" rel="me">
            Blog
          </a>
        </span>
        <span role="listitem">
          <a href="https://github.com/shoonia/1x1" class="footer__link" aria-label="github">
            <img src="<%= gitHubStars%>" alt="GitHub Stars" />
          </a>
        </span>
      </div>
    </footer>
  </div>
</body>

</html>
